<%= form_for current_user, url: account_path, method: :put, html: { class: "form" } do |f| %>
  <%= error_message current_user %>
  <h2 class="form-heading">设置</h2>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", disabled: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :email, class: "form-control", disabled: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "新密码" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "确认新密码" %>
  </div>
  <%= f.submit "提交", class: "btn btn-primary btn-block btn-lg" %>
<% end %>
