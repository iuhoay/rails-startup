<% if flash.any? %>
  <% if flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= flash[:warning] %>
    </div>
  <% end %>
  <% if flash[:success] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= flash[:success] %>
    </div>
  <% end %>
  <% if flash[:info] %>
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= flash[:info] %>
    </div>
  <% end %>
  <% if flash[:error] %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= flash[:error] %>
    </div>
  <% end %>
<% end %>
